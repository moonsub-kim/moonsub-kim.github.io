---
layout: none
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
	<channel>
		<title>{{ site.name | xml_escape }}</title>
		<description>{% if site.description %}{{ site.description | xml_escape }}{% endif %}</description>		
		<link>{{ site.url }}</link>
		<atom:link href="{{ site.url }}/feed.xml" rel="self" type="application/rss+xml" />
		{% assign pages = site.pages | where_exp:"item", "item.title != nil and item.title != '404' and item.last_modified_date != nil" %}
		{% for post in pages %}
			{% comment %} | sort:"last_modified_date" | reverse %} {% endcomment %}
			<item>
				<title>{{ post.title | xml_escape }}</title>
				<description>{{ post.description | xml_escape }}</description>
				<pubDate>{{ post.last_modified_date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
				<link>{{ post.url | absolute_url }}</link>
				<guid isPermaLink="true">{{ post.url | absolute_url }}</guid>
			</item>
		{% endfor %}
	</channel>
</rss>
