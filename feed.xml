---
layout: none
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
	<channel>
		<title>{{ site.name | xml_escape }}</title>
		<description>{% if site.description %}{{ site.description | xml_escape }}{% endif %}</description>		
		<link>{{ site.url }}</link>
		<atom:link href="{{ site.url }}/feed.xml" rel="self" type="application/rss+xml" />
		{% for post in site.pages | where_exp:"item", "item.title != nil and item.title != '404'" | sort "last_modified_date" | reverse %}
			{% if post.title != "404" and post.last_modified_date != null %}
				<item>
					<title>
						{% if post.grand_parent != nil %}
							{{ post.grand_parent | xml_escape}} :: {{ post.parent | xml_escape }} :: {{ post.title | xml_escape }}
						{% elseif post.parent != nil %}
							{{ post.parent | xml_escape }} :: {{ post.title | xml_escape }}
						{% else %}
							{{ post.title | xml_escape }}
						{% endif %}
					</title>
					<description>{{ post.description | xml_escape }}</description>
					<pubDate>{{ post.last_modified_date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
					<link>{{ post.url | absolute_url }}</link>
					<guid isPermaLink="true">{{ post.url | absolute_url }}</guid>
				</item>
			{% endif %}
		{% endfor %}
	</channel>
</rss>
